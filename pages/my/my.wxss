/* pages/my/my.wxss */

.my-box {
  background: rgba(246, 246, 246, 1);
  height: 100vh;
}

.my {
  background-color: #fff;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.my image {
  width: 160rpx;
  height: 160rpx;
}

.my-name {
  font-size: 30rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  margin-left: 32rpx;
}

.my-name view:nth-child(2) {
  font-size: 22rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  margin-top: 5rpx;
}

.my-buton {
  display: flex;
  margin-left: 130rpx;
}

.my-buton button {
  width: 110rpx;
  height: 36rpx;
  border-radius: 2px;
  border: 1px solid rgba(198, 160, 27, 1);
  text-align: center;
  line-height: 36rpx;
  color: rgba(198, 160, 27, 1);
  margin-right: 10rpx;
  background-color: #fff;
  font-size: 22rpx;
  padding: 0;
}

.my-liquan {
  background-color: #fff;
  padding: 30rpx;
  box-sizing: border-box;
  margin-top: 10rpx;
}

.my-liquan-title {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  margin-bottom: 38rpx;
}

.my-liquan-icon {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.my-liquan-icon view {
  text-align: center;
  position: relative;
}

.my-liquan-icon view image {
  width: 42rpx;
  height: 42rpx;
  vertical-align: middle;
}

.my-liquan-icon view text {
  display: inline-block;
  width: 26rpx;
  height: 26rpx;
  background: rgba(214, 57, 26, 1);
  text-align: center;
  line-height: 26rpx;
  color: #fff;
  border-radius: 100%;
  font-size: 22rpx;
  margin-left: -26rpx;
  position: absolute;
  right: 0;
  top: 0;
}

.my-liquan-icon>view>view {
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(90, 90, 90, 1);
  margin-top: 10rpx;
}

.my-adress-text {
  /* display: flex;
  justify-content: flex-start;
  align-items: center; */
}

.my-adress-text>view {
  width: 244rpx;
  height: 179rpx;
  text-align: center;
  line-height: 179rpx;
  color: rgba(214, 57, 26, 1);
  font-size: 36rpx;
  border: 1px solid rgba(214, 57, 26, 1);
}

.radio-group {
  width: 100%;
  border-radius: 3rpx;
  padding: 24rpx 38rpx;
  box-sizing: border-box;
}

.adress {
  margin-top: 16rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  padding-bottom: 20rpx;
  box-sizing: border-box;
  border-bottom: 1px solid rgba(102, 102, 102, 1);
}
.active {
  border-bottom: 1px solid rgba(214, 57, 26, 1);
}

.adress-name {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 500;
  color: rgba(35, 24, 21, 1);
  line-height: 56rpx;
  margin-left: 20rpx;
}

.adress-editor {
  display: inline-block;
  width: 28rpx;
  height: 28rpx;
  vertical-align: middle;
  float: right;
}

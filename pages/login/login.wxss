/* pages/login/login.wxss */

.login {
  height: 100vh;
  padding-top: 50rpx;
  background: rgba(247, 247, 247, 1);
}

.number {
  background-color: #fff;
  padding: 20rpx 30rpx;
}

.number view {
  height: 92rpx;
  line-height: 92rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.number view input {
  height: 100%;
  width: 300rpx;
  margin-left: 60rpx;
}

.number view:nth-child(1) {
  border-bottom: 1px solid rgba(0, 0, 0, 0.2);
}

button {
  width: 690rpx;
  height: 80rpx;
  background: rgba(214, 57, 26, 1);
  border-radius: 44rpx;
  margin: 50rpx auto;
  color: #fff;
}

.xieyi {
  font-size: 22rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  padding: 0 54rpx;
}

.xieyi text {
  color: #d6391a;
}

button.yanzhengma {
margin-left: 30rpx;
width:176rpx;
height:42rpx;
font-size:30rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(153,153,153,1);
line-height:42rpx;
background-color: #fff;
border: none;
outline:none;
padding: 0;
}
button.yanzhengma::after{
  border: none;
}
button[disabled]:not([type]) {
  background-color: #fff;
}

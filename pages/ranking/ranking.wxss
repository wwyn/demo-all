/* pages/fenlei/fenlei.wxss */

.classify {
}

.tabNavs {
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 1rpx 0rpx 0rpx rgba(0, 0, 0, 0.09);
}

.tabNavItem {
  width: 33%;
  background: #fff;
  color: #000;
  text-align: center;
  font-size: 28rpx;
  font-weight: 400;
  font-family: PingFangSC-Regular;
}

.active {
  color: rgba(214, 57, 26, 1);
  border-bottom: 4rpx solid rgba(214, 57, 26, 1);
}

.tabContentItems {
  margin-top: 20rpx;
  background-color: #fff;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.tabContentItem {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-top: 30rpx;
}

.rank-img {
  width: 222rpx;
  height: 222rpx;
  position: relative;
}

.rank-img .rank-top {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 87rpx;
  height: 33rpx;
  position: absolute;
  top: 0;
  left: 0;
}
.rank-top view:nth-child(1) {
  width: 57rpx;
height:30rpx;
line-height: 30rpx;
text-align: center;
background:rgba(222,167,49,1);
font-size:22rpx;
font-family:PingFangSC-Medium;
font-weight:500;
color:rgba(0,0,0,1);

}
.rank-top view:nth-child(2){
  width:30rpx;
height:30rpx;
line-height: 30rpx;
text-align: center;
background:rgba(27,27,27,1);
font-size:24rpx;
font-family:PingFangSC-Medium;
font-weight:500;
color:rgba(255,255,255,1);

}

.rank-img image {
  width: 100%;
  height: 222rpx;
  vertical-align: middle;
}

.rank-txt {
  flex: 1;
  margin-left: 24rpx;
  padding-bottom: 23rpx;
  box-sizing: border-box;
  border-bottom: 1px solid rgba(0,0,0,.1);
}

.rank-title {
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.rank-money {
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(213, 57, 26, 1);
}

.rank-fl {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 36rpx;
}

.rank-time {
  font-size: 22rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
}

.rank-shop {
  width: 150rpx;
  height: 48rpx;
  line-height: 48rpx;
  background: rgba(214, 57, 26, 1);
  border-radius: 24rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  text-align: center;
}

.rank-get {
  width: 150rpx;
  height: 48rpx;
  background: rgba(211, 211, 211, 1);
  border-radius: 24rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  text-align: center;
}

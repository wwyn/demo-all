/* pages/generalize/generalize.wxss */

.send {
  width: 750rpx;
  height: 310rpx;
  background: rgba(246, 248, 251, 1);
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.send image {
  width: 100rpx;
  height: 100rpx;
}

.send .photo {
  width: 104rpx;
  height: 86rpx;
}

.send view {
  font-size: 32rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  text-align: center;
}

.send view .btn {
  margin: 0;
  padding: 0;
  border: 1px solid transparent;
  outline: none;
  background-color:transparent;
  line-height: 0;
}

button[class="btn"]::after {
  border: 0;
} 

.generalize-pic view .image {
  width: 362rpx;
  height: 616rpx;
  border: 1px solid red;
  margin-top: 119rpx;
}

.generalize-pic view view {
  width: 36rpx;
  height: 36rpx;
  border: 2px solid rgba(213, 213, 213, 1);
  border-radius: 100%;
  margin-top: 80rpx;
}

.generalize-pic view .Chosen {
  margin-top: 50rpx;
  border: none;
}

.generalize-pic {
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;
}

.generalize-pic view {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.generalize-pic view .click {
  width: 343rpx;
  height: 686rpx;
  margin-top: 84rpx;
  border: 1px solid blue;
}

/* pages/user/user.wxss */

.user {
  width: 100%;
  height: 100%;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

.user-head {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.user-pic {
  display: flex;
}

.user-img {
  width: 160rpx;
  height: 160rpx;
}

.user-txt {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 22rpx;
}

.user-txt view:nth-child(1) {
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.user-txt view:nth-child(2) {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  margin-top: 10rpx;
}

.user-txt view:nth-child(3) {
  width: 120rpx;
  height: 42rpx;
  border-radius: 4rpx;
  text-align: center;
  line-height: 42rpx;
  border: 1px solid rgba(106, 180, 25, 1);
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(106, 180, 25, 1);
  margin-top: 23rpx;
}

.share {
  width: 38rpx;
  height: 37rpx;
}

.line {
  width: 750rpx;
  height: 14rpx;
  background: rgba(246, 248, 251, 1);
  margin-left: -30rpx;
  margin-top: 49rpx;
}

.backstage {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 21rpx 0;
  box-sizing: border-box;
}

.backstage .backstage-txt {
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.backstage image {
  width: 40rpx;
  height: 40rpx;
}

.line-sm {
  width: 750rpx;
  height: 2rpx;
  background: rgba(233, 233, 234, 1);
  margin-left: -30rpx;
}

.backstage-from {
  position: relative;
}

.backstage-from view {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  margin-top: 29rpx;
  margin-bottom: 20rpx;
}

.backstage-from input {
  width: 690rpx;
  height: 91rpx;
  background: rgba(235, 238, 242, 1);
  border-radius: 8px;
  display: block;
  margin: 0 auto;
  padding: 0 10rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(74, 74, 74, 1);
  line-height: 91rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.backstage-from .address {
  width: 690rpx;
  height: 91rpx;
  background: rgba(235, 238, 242, 1);
  border-radius: 8px;
  display: block;
  margin: 0 auto;
  padding: 0 10rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(74, 74, 74, 1);
  line-height: 91rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding-right: 112rpx;
}

.copy {
  width: 112rpx;
  height: 91rpx;
  background: rgba(52, 140, 248, 1);
  border-radius: 0px 8px 8px 0px;
  color: #fff;
  position: absolute;
  right: 0rpx;
  top: 57rpx;
  z-index: 2;
  text-align: center;
  line-height: 91rpx;
  font-size: 28rpx;
}

.expert {
  width: 670rpx;
  height: 98rpx;
  background-color: #2865fb;
  font-size: 36rpx;
  color: #fff;
  text-align: center;
  line-height: 98rpx;
  margin: 0 auto;
  margin-top: 146rpx;
  border-radius: 12rpx;
}

.shut-down {
  width: 100%;
  height: 1201rpx;
  background-color: #f6f8fb;
}

.business-stop image {
  width: 168rpx;
  height: 168rpx;
  margin: 0 auto;
  padding-top: 87rpx;
  display: block;
}

.business-stop view {
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(218, 30, 30, 1);
  text-align: center;
  padding-top: 26rpx;
}

/* pages/home/home.wxss */

.enter {
  width: 100%;
  height: 100%;
  background-position: center;
  background-repeat: no-repeat;
  position: relative;
  padding-top: 308rpx;
  box-sizing: border-box;
}

.notice {
  width: 112rpx;
  height: 34rpx;
  color: #fff;
  font-size: 20rpx;
  background-color: #50e3c2;
  text-align: center;
  line-height: 34rpx;
  border-radius: 16rpx;
  position: absolute;
  top: 22rpx;
  right: 30rpx;
}

.conter {
  width: 650rpx;
  height: 586rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 40rpx 30rpx;
  margin: 0 auto;
  background-size: cover;
  box-sizing: border-box;
}

.conter image {
  width: 105rpx;
  height: 105rpx;
  margin-right: 13rpx;
}

.conter>view {
  display: flex;
  justify-content: flex-start;
  margin-bottom: 24rpx;
  box-sizing: border-box;
}

.conter>view:nth-child(4) {
  margin-bottom: 0;
}

.conter .text text:nth-child(1) {
  display: inline-block;
  font-size: 28rpx;
  color: #666;
}

.conter .text text:nth-child(2) {
  display: inline-block;
  font-size: 24rpx;
  color: #999;
}

.expert {
  width: 670rpx;
  height: 98rpx;
  background-color: #7bc8fd;
  font-size: 36rpx;
  color: #fff;
  text-align: center;
  line-height: 98rpx;
  margin: 0 auto;
  border-radius: 12rpx;
  margin-top: 56rpx;
}

.enterprise {
  width: 670rpx;
  height: 98rpx;
  background-color: #2865fb;
  font-size: 36rpx;
  color: #fff;
  text-align: center;
  line-height: 98rpx;
  margin: 0 auto;
  margin-top: 30rpx;
  margin-bottom: 26rpx;
  border-radius: 12rpx;
}

.del {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  position: relative;
}

.del image {
  width: 46rpx;
  height: 46rpx;
  position: absolute;
  right: 0;
}

.modal {
  width: 750rpx;
  height: 1201rpx;
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
  top: 0;
  left: 0;
}

.content {
  width: 640rpx;
  height: 734rpx;
  border-radius: 12rpx;
  background-color: #fff;
  padding: 27rpx 30rpx 78rpx 30rpx;
  box-sizing: border-box;
  margin: 0 auto;
  margin-top: 166rpx;
}

.txt {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}
.txt text {
  display: inline-block;
  margin-top: 32rpx; 
}

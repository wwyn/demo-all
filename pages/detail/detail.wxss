/* pages/detail/detail.wxss */

.box {
  background-color: rgba(245, 244, 244, 1);
}

.present {
  border-top: 1px solid rgba(0, 0, 0, 0.2);
  padding: 24rpx 30rpx;
  background-color: #fff;
}

.present view:nth-child(1) {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.present view:nth-child(1) text {
  color: rgba(214, 57, 26, 1);
}

.present view:nth-child(2) {
  font-size: 22rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}

.present view:nth-child(3) {
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  padding: 22rpx 0;
  box-sizing: border-box;
  border-top: 1px dashed rgba(0, 0, 0, 0.2);
  border-bottom: 1px dashed rgba(0, 0, 0, 0.2);
}

.present view:nth-child(3) text {
  display: inline-block;
  width: 6rpx;
  height: 30rpx;
  background: rgba(214, 57, 26, 1);
  margin-right: 28rpx;
}

.userInfor {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
}

.userInfor view {
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(0, 0, 0, 1);
  margin-top: 22rpx;
}

.present .userInfor .userInfor-mobile {
  margin: 0;
  margin-left: 20rpx;
}

.bmx {
  width: 100%;
  height: 11rpx;
  vertical-align: middle;
}

.massage {
  padding: 20rpx 30rpx;
  background-color: #fff;
}

.gs-massage {
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  margin-bottom: 20rpx;
}

.gs-massage text {
  display: inline-block;
  width: 6rpx;
  height: 28rpx;
  background: rgba(214, 57, 26, 1);
  margin-right: 28rpx;
}

.fp {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  font-size: 26rpx;
}

.fp>view {
  width: 155rpx;
  height: 91rpx;
}

.fp .img {
  width: 155rpx;
  height: 91rpx;
  margin-left: 10rpx;
}
.fp .img image {
  width: 100%;
  height: 100%;
  vertical-align: middle;
}

.user-massage {
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.user-massage view {
  margin-bottom: 10rpx;
}

.dingdan-xiangqing {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 30rpx 0;
  box-sizing: border-box;
  border-bottom: 1px dashed rgba(0, 0, 0, 0.2);
}

.dingdan-xiangqing image {
  width: 222rpx;
  height: 222rpx;
  vertical-align: middle;
}

.dingdan-text {
  flex: 1;
  margin-left: 24rpx;
}

.dingdan-text view:nth-child(1) {
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.dingdan-text view:nth-child(2) {
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(213, 57, 26, 1);
}

.dingdan-text view:nth-child(3) {
  margin-top: 36rpx;
}

.dingdan-text view:nth-child(3) view {
  font-size: 22rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
}

.lipin {
  background-color: #fff;
  margin-top: 20rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.present-name {
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  margin-bottom: 40rpx;
}

.present-name text {
  display: inline-block;
  width: 266rpx;
  height: 53rpx;
  background: rgba(249, 245, 239, 1);
  border-radius: 24px;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  text-align: center;
  line-height: 53rpx;
  margin-left: 24rpx;
}

.present-box {
  padding: 30rpx 0;
  box-sizing: border-box;
}

.present-box image {
  display: block;
  margin: auto;
  width: 30rpx;
  height: 15rpx;
}

.shangchuan {
  text-align: center;
  background: rgba(245, 244, 244, 1);
  border-radius: 3px;
  margin-left: 10rpx;
}
